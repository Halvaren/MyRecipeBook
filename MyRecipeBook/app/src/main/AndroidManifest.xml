<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alvaro.sabi.rosquilletas.myrecipebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".myRecipes.RecipeTypesActivity"></activity>

        <activity android:name=".myRecipes.MyRecipesListActivity"></activity>

        <activity android:name=".myRecipes.ShowRecipeActivity"></activity>

        <activity android:name=".newRecipe.EditRecipeActivity"></activity>

        <activity android:name=".shoppingLists.ShoppingListsActivity"></activity>

        <activity android:name=".shoppingLists.ItemListActivity"></activity>

        <activity android:name=".menuCreator.MenuCreatorActivity"></activity>

        <activity android:name=".menuCreator.EditMenuActivity"></activity>

        <activity android:name=".menuCreator.ShowMenuActivity"></activity>
    </application>

</manifest>