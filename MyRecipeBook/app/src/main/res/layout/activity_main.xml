<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/myRecipesButton"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_recipes"
        android:onClick="onClickMyRecipes"
        android:text="My Recipes"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newRecipeButton"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/new_recipe"
        android:onClick="onClickNewRecipe"
        android:text="New recipe"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/myRecipesButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/myRecipesButton"
        app:layout_constraintTop_toBottomOf="@+id/myRecipesButton" />

    <Button
        android:id="@+id/shoppingListsButton"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/shopping_list"
        android:onClick="onClickShoppingLists"
        android:text="Shopping Lists"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menuCreatorButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/menuCreatorButton"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/menu_creator"
        android:onClick="onClickMenuCreator"
        android:text="Menu Creator"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/shoppingListsButton" />
</android.support.constraint.ConstraintLayout>