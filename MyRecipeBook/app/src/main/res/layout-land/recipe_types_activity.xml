<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/appetizerButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        android:text="Appetizers"
        app:layout_constraintBottom_toTopOf="@+id/secondCourseButton"
        app:layout_constraintEnd_toStartOf="@+id/starterButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sauceButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Sauces"
        app:layout_constraintBottom_toTopOf="@+id/drinkButton"
        app:layout_constraintEnd_toEndOf="@+id/starterButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/starterButton"
        app:layout_constraintTop_toBottomOf="@+id/starterButton" />

    <Button
        android:id="@+id/dessertButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Desserts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/secondCourseButton"
        app:layout_constraintStart_toStartOf="@+id/secondCourseButton"
        app:layout_constraintTop_toBottomOf="@+id/secondCourseButton" />

    <Button
        android:id="@+id/drinkButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Drinks & Cocktail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sauceButton"
        app:layout_constraintStart_toStartOf="@+id/sauceButton"
        app:layout_constraintTop_toBottomOf="@+id/sauceButton" />

    <Button
        android:id="@+id/starterButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:text="Starters"
        app:layout_constraintBottom_toTopOf="@+id/sauceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appetizerButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secondCourseButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Second courses"
        app:layout_constraintBottom_toTopOf="@+id/dessertButton"
        app:layout_constraintEnd_toEndOf="@+id/appetizerButton"
        app:layout_constraintStart_toStartOf="@+id/appetizerButton"
        app:layout_constraintTop_toBottomOf="@+id/appetizerButton" />
</android.support.constraint.ConstraintLayout>