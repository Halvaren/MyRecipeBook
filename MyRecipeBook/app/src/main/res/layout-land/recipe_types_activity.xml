<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape_background">

    <Button
        android:id="@+id/appetizerButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/appetizer"
        android:onClick="onClickAppetizer"
        android:text="Appetizers"
        app:layout_constraintBottom_toTopOf="@+id/secondCourseButton"
        app:layout_constraintEnd_toStartOf="@+id/starterButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sauceButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/sauce"
        android:onClick="onClickSauce"
        android:text="Sauces"
        app:layout_constraintBottom_toTopOf="@+id/drinkButton"
        app:layout_constraintEnd_toEndOf="@+id/starterButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/starterButton"
        app:layout_constraintTop_toBottomOf="@+id/starterButton" />

    <Button
        android:id="@+id/dessertButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/desert"
        android:onClick="onClickDessert"
        android:text="Desserts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/secondCourseButton"
        app:layout_constraintStart_toStartOf="@+id/secondCourseButton"
        app:layout_constraintTop_toBottomOf="@+id/secondCourseButton" />

    <Button
        android:id="@+id/drinkButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/drinks"
        android:onClick="onClickDrink"
        android:text="Drinks/Cocktail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sauceButton"
        app:layout_constraintStart_toStartOf="@+id/sauceButton"
        app:layout_constraintTop_toBottomOf="@+id/sauceButton" />

    <Button
        android:id="@+id/starterButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/starter"
        android:onClick="onClickStarter"
        android:text="Starters"
        app:layout_constraintBottom_toTopOf="@+id/sauceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appetizerButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secondCourseButton"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@drawable/second"
        android:onClick="onClickSecondCourse"
        android:text="Second courses"
        app:layout_constraintBottom_toTopOf="@+id/dessertButton"
        app:layout_constraintEnd_toEndOf="@+id/appetizerButton"
        app:layout_constraintStart_toStartOf="@+id/appetizerButton"
        app:layout_constraintTop_toBottomOf="@+id/appetizerButton" />
</androidx.constraintlayout.widget.ConstraintLayout>